<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id = "@+id/edit_study_set_term"
        android:text="@string/add_study_set_title"

        android:textSize="60sp"
        android:fontFamily="@font/bubbles"
        android:textStyle="bold"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_term"
        android:hint="@string/add_study_set_name"
        android:inputType="text"

        android:textSize="18sp"
        android:autofillHints=""

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_study_set_term" />

    <Button
        android:id = "@+id/save_study_set"
        android:background="@drawable/circle_button"
        android:text = "@string/save"

        android:textSize="18sp"
        android:gravity="center"
        android:includeFontPadding="false"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_term" />

    <TextView
        android:id = "@+id/save_study_set_caption"
        android:text="@string/save_caption"

        android:textSize="14sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        app:layout_constraintEnd_toEndOf="@id/save_study_set"
        app:layout_constraintStart_toStartOf="@id/save_study_set"
        app:layout_constraintTop_toBottomOf="@id/save_study_set" />

    <Button
        android:id = "@+id/cancel_study_set"
        android:background="@drawable/circle_button"
        android:text = "@string/delete"

        android:textSize="18sp"
        android:gravity="center"
        android:includeFontPadding="false"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"

        app:layout_constraintTop_toBottomOf="@id/edit_term"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id = "@+id/cancel_study_set_caption"
        android:text="@string/cancel_caption"

        android:textSize="14sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        app:layout_constraintEnd_toEndOf="@id/cancel_study_set"
        app:layout_constraintStart_toStartOf="@id/cancel_study_set"
        app:layout_constraintTop_toBottomOf="@id/cancel_study_set" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/cancel_study_set_caption" />

</androidx.constraintlayout.widget.ConstraintLayout>